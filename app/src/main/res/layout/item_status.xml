<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6mdp"
        android:layout_marginTop="@dimen/_6mdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_55mdp"
            android:layout_height="@dimen/_55mdp"
            android:layout_centerInParent="true"
            android:padding="@dimen/_4mdp"
            android:src="@drawable/placeholder" />

        <com.devlomi.circularstatusview.CircularStatusView
            android:id="@+id/circular_status_view"
            android:layout_width="@dimen/_56mdp"
            android:layout_height="@dimen/_56mdp"
            android:layout_centerInParent="true"
            app:portion_color="#FB0101"
            app:portion_spacing="@dimen/_2mdp"
            app:portion_width="@dimen/_2mdp"
            app:portions_count="20" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>